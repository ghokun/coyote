{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeStrategy": "squash",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
